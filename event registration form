<script>
function showForm(type){

let form=document.getElementById("formCard");
let title=document.getElementById("formTitle");
let select=document.getElementById("eventSelect");

let infoBox=document.getElementById("programInfo");
let infoTitle=document.getElementById("infoTitle");
let infoText=document.getElementById("infoText");

infoBox.style.display="block";
form.style.display="block";

select.innerHTML="<option>Select Event</option>";

if(type==="technical"){
title.innerText="ðŸ’» Technical Event Registration";
infoTitle.innerText="Technical Programs";
infoText.innerHTML="Technical programs include hackathons, coding contests, workshops and quizzes.";

["Hackathon","Coding Contest","Workshop","Tech Quiz"].forEach(e=>{
select.innerHTML+=`<option>${e}</option>`;
});
}
else{
title.innerText="ðŸŽ­ Cultural Event Registration";
infoTitle.innerText="Cultural Programs";
infoText.innerHTML="Cultural programs include dance, singing, drama and art competitions.";

["Dance","Singing","Drama","Art & Painting"].forEach(e=>{
select.innerHTML+=`<option>${e}</option>`;
});
}

infoBox.scrollIntoView({behavior:"smooth"});
}

function showSuccess(e){
e.preventDefault();
alert("ðŸŽ‰ Registration completed successfully!");
}
</script>

