<script>
function openTab(tab,btn){
 document.querySelectorAll(".popup").forEach(p=>p.classList.remove("active"));
 document.querySelectorAll(".tabs button").forEach(b=>b.classList.remove("active"));
 document.getElementById(tab).classList.add("active");
 btn.classList.add("active");
}

function suggestTrip(){
 let b=document.getElementById("budget").value;
 let msg=b<10000?"Perfect for weekend trips üß≥":
 b<30000?"Great for 4‚Äì5 day vacations ‚úàÔ∏è":
 "Luxury premium holiday üåç";
 document.getElementById("result").innerHTML="Suggestion: "+msg;
}
</script>
